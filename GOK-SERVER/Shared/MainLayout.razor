@inherits LayoutComponentBase

<div class="sidebar">
    <NavMenu />
</div>

<div class="main">
    <div class="top-row px-4">
        @if (HuidigeGebruiker.Gebruikersnaam == null)
        {
            <a href="/gebruiker/login">Log In</a>
            <a href="/gebruiker/register">Register</a>
        }
        else
        {
            <a href="/gebruiker/logout">Log Uit</a>
        }
    </div>

    <div class="content px-4">
        @Body
    </div>
</div>

@code {

    [CascadingParameter]
    public DefaultClasses.Gebruiker HuidigeGebruiker { get; set; }

}